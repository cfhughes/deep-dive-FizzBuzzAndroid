<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="edu.cnm.deepdive.chughes.fizzbuzzandroid.MainActivity">

    <Button
            android:id="@+id/button_fizzbuzz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FizzBuzz"
            android:onClick="showFizzBuzz"/>

    <Button
            android:id="@+id/button_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second"
            android:onClick="showSecond"/>

<FrameLayout android:id="@+id/fragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />

</LinearLayout>
